<root>
  <behavior type="parallel">
    
    <behavior type="aimToPlayer" />
    
    <behavior type="sequence">
      <behavior type="fire"/>
      <behavior type="wait">
        <param value="1.0" />
      </behavior>
    </behavior>

    <behavior type="selector">
      
      <behavior type="parallel">
        <behavior type="checkDistance" sBlackboardKey="player" fDistance="200" bNegate="1" />
        <!--No tiene que huir-->
        <behavior type="selector">
          
          <behavior type="sequence">
            <behavior type="checkDistance" sBlackboardKey="player" fDistance="400" bNegate="1" />
            <behavior type="goToPlayerPosition">
              <param value="300.0" />
              <param value="1" />
            </behavior>
          </behavior>

          <behavior type="wait">
            <param value="0.0" />
          </behavior>
          
        </behavior>
          
        
      </behavior>

      <!--Huida-->
      <behavior type="parallel">
        <behavior type="checkDistance" sBlackboardKey="player" fDistance="300" />

        <behavior type="sequence">
          <behavior type="goToRandomPosition">
            <param value="20.0" />
          </behavior>
          <behavior type="wait">
            <param value="0.2" />
          </behavior>
        </behavior>
        
      </behavior> 
        
    </behavior><!--Selector-->
    
  </behavior><!--Parallel-->
  
 </root>



